<% if !@post.blank? %>
	<div><h3><%= @post.title %></h3>
	<p class="tuck">&rarr; <%= time_ago_in_words(@post.timestamp)%> ago</p><br/>
	<% @markdown_text = RDiscount.new(@post.body) %>
	<%= @markdown_text.to_html %></div>
	
<% else %>
<div class="center"><img src="../images/dw_question.png" alt="image"/><br/><p>I believe you have reached this page in error. Please try again.</p></div>
<% end %>
