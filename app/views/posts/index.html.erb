<h1>Listing posts</h1>

<table id="newspaper-a" summary="Posts">
  <tr>
    <th>Title</th>
   <!-- <th>Body</th> -->
    <th>Timestamp</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%=h post.title %></td>

    <td><%=h post.timestamp %></td>
    <td><%=h post.category.category_name %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

